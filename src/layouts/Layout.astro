---
interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;

let imagePlaceholder = image;

if (image.length == 0){
imagePlaceholder = "/seo/image_b.png"
};
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Backend -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

		<!-- General -->
		<title>{title}</title>
		<meta name="description" content={description}/>
		<meta name="generator" content={Astro.generator}/>

		<meta property="og:url" content={Astro.url}>
        <meta property="og:type" content="website">
        <meta property="og:title" content="funnydusto">
        <meta property="og:description" content={description}>
        <meta property="og:image" content={imagePlaceholder}>

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="funnydusto.com">
		<meta property="twitter:url" content={Astro.url}>
		<meta name="twitter:title" content="funnydusto">
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={imagePlaceholder}>
		<meta name="twitter:site" content="@funnydusto">

		<!-- Search-Engine Specific SEO -->
		<!-- Google -->
		<meta name="google" content="nositelinksearchbox">
		<meta name="googlebot" content="notranslate">

	</head>
	<body class="flex flex-col items-center gap-9 px-12 py-24 mx-auto md:px-32 xl:px-64 bg-zinc-800">
		<slot />
	</body>
</html>